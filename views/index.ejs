<%- include("partials/header") %>
<div class="blogPostContainer">
  <% blogs.forEach(function(blog) { %>
    <% const date = (blog.dateCreated.toDateString()).slice(3) %>
    <div class="blogPost ui raised segment container">
      <div class="titleDate">
        <h2 id="title"><%= blog.title %></h2>
        <span><%= date %><span>
      </div>
      <img src="<%= blog.image %>" width="100%" text-align="right" />

      <p><%= blog.body %></p>
      <a href="/blogs/<%= blog._id %>" class="ui mini olive button">Read more</a>
    </div>
  <% }); %>
</div>
    <%- include("partials/footer") %>
